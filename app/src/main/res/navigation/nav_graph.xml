<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/chooseCurrencyFragment">

    <fragment
        android:id="@+id/chooseCurrencyFragment"
        android:name="com.curverto.app.fragments.ChooseCurrencyFragment"
        android:label="fragment_choose_currency"
        tools:layout="@layout/fragment_choose_currency" >
        <action
            android:id="@+id/action_chooseCurrencyFragment_to_homeFragment"
            app:destination="@id/exchangeRatesFragment"
            app:popUpTo="@id/chooseCurrencyFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/exchangeRatesFragment"
        android:name="com.curverto.app.fragments.ExchangeRatesFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_exchangerates" >
        <argument
            android:name="MainCurrencyName"
            app:argType="string" />
        <action
            android:id="@+id/action_exchangeRatesFragment_to_editCurrencyFragment"
            app:destination="@id/editCurrencyFragment" />
    </fragment>
    <fragment
        android:id="@+id/editCurrencyFragment"
        android:name="com.curverto.app.fragments.EditCurrencyFragment"
        android:label="fragment_edit_currency"
        tools:layout="@layout/fragment_edit_currency" />
</navigation>